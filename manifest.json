{

  "manifest_version": 2,
  "name": "Activity Manager",
  "version": "1.1.1",

  "description": "Manages the websites you visit",
  "homepage_url": "https://github.com/codlocker/Activity-Manager",
  "icons": {
    "48": "icons/mate.png"
  },
  "applications": {
    "gecko": {
      "id": "{babadc56-a5c8-44f4-b75b-37381e8fcf83}",
      "strict_min_version": "42.0"
    }
  },
  "permissions": [
    "history",
    "storage",
    "notifications"
  ],

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": "icons/mate.png",
    "default_title": "Activity Manager",
    "default_popup": "popup/index.html"
  }

}