{

  "manifest_version": 1,
  "name": "Activity Manager",
  "version": "1.0.1",

  "description": "Manages the websites you visit",
  "homepage_url": "https://github.com/codlocker/Activity-Manager",
  "icons": {
    "48": "icons/mate.png"
  },

  "permissions": [
    "history",
    "storage",
    "notifications"
  ],

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": "icons/mate.png",
    "default_title": "Activity Manager",
    "default_popup": "popup/index.html"
  }

}